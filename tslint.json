{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "object-literal-sort-keys": false,
        "max-line-length": [ true, 150 ],
        "interface-name" : [true, "never-prefix"],
        "variable-name": [
            false,
            "allow-leading-underscore"
        ],
        "no-namespace": false,
        "max-classes-per-file": [true, 10],
        "no-var-requires": false
    },
    "linterOptions": {
        "exclude": [
            "src/test.ts"
        ]
    },
    "rulesDirectory": []
}